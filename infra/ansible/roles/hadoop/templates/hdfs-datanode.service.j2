[Unit]
Description=Apache Hadoop HDFS Datanode
After=network.target

[Service]
Type=forking
User={{ hadoop_user }}
Group={{ hadoop_group }}
ExecStart=/opt/hadoop-{{ hadoop_version }}/sbin/hadoop-daemon.sh start datanode
ExecStop=/opt/hadoop-{{ hadoop_version }}/sbin/hadoop-daemon.sh stop datanode
PIDFile=/tmp/hadoop-{{ hadoop_user }}-datanode.pid

[Install]
WantedBy=multi-user.target
